<?xml version="1.0" encoding="utf-8"?>
<mobi.jzcx.android.core.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <mobi.jzcx.android.core.percent.PercentRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="66.1%w" >

        <mobi.jzcx.android.core.percent.PercentLinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/petcenter_petimage"
                android:layout_width="0px"
                android:layout_height="0px"
                app:layout_heightPercent="19.2%w"
                app:layout_marginTopPercent="15%w"
                app:layout_widthPercent="19.2%w"
                fresco:placeholderImage="@drawable/avatar_default_image" />

            <TextView
                android:id="@+id/petcenter_petname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent="3%w"
                android:gravity="center"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/petcenter_petintro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent="3.3%w"
                android:gravity="center"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="13sp" />

            <mobi.jzcx.android.core.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent="4%w"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/petcenter_petstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="0px"
                    app:layout_heightPercent="4.16%w"
                    app:layout_marginLeftPercent="2%w"
                    android:background="#999999" />

                <ImageView
                    android:id="@+id/petcenter_petsex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_heightPercent="4.2%w"
                    app:layout_marginLeftPercent="2%w"
                    app:layout_widthPercent="4.2%w"
                    android:src="@drawable/account_pet_default" />

                <TextView
                    android:id="@+id/petcenter_petbirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_marginLeftPercent="2%w"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </mobi.jzcx.android.core.percent.PercentLinearLayout>
        </mobi.jzcx.android.core.percent.PercentLinearLayout>
    </mobi.jzcx.android.core.percent.PercentRelativeLayout>

</mobi.jzcx.android.core.percent.PercentRelativeLayout>