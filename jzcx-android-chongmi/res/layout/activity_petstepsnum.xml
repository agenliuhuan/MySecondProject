<?xml version="1.0" encoding="utf-8"?>
<mobi.jzcx.android.core.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff6600"
    android:orientation="vertical" >

    <mobi.jzcx.android.core.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        app:layout_heightPercent="13%w"
        android:background="@color/comm_title_color" >

        <mobi.jzcx.android.core.percent.PercentRelativeLayout
            android:id="@+id/petstepsnum_title_leftRL"
            android:layout_width="0px"
            android:layout_height="0px"
            app:layout_heightPercent="13%w"
            app:layout_widthPercent="13%w" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_titlebar_left_normal" />
        </mobi.jzcx.android.core.percent.PercentRelativeLayout>

        <mobi.jzcx.android.core.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/petstepsnum_centerimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_heightPercent="8%w"
                app:layout_widthPercent="8%w" />

            <TextView
                android:id="@+id/petstepsnum_title_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_marginLeftPercent="2%w"
                android:text=""
                android:textColor="@color/white"
                android:textSize="17sp" />
        </mobi.jzcx.android.core.percent.PercentLinearLayout>

        <TextView
            android:id="@+id/petstepsnum_title_righttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="3.33%w"
            android:text="@string/petstepsnum_righttext"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </mobi.jzcx.android.core.percent.PercentRelativeLayout>

    <mobi.jzcx.android.core.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/petstepsnum_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="3.33%w"
            app:layout_marginTopPercent="3.33%w"
            android:text="@string/petstepsnum_today"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <mobi.jzcx.android.core.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <mobi.jzcx.android.chongmi.view.HorizontalListView
                android:id="@+id/petstepsnum_weeklist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_heightPercent="8.89%w"
                app:layout_marginLeftPercent="3.33%w"
                app:layout_marginRightPercent="3.33%w"
                app:layout_widthPercent="80%w" />

            <ImageView
                android:id="@+id/petstepsnum_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_heightPercent="8.89%w"
                app:layout_widthPercent="8.89%w"
                android:src="@drawable/petstepsnum_calendarimg" />
        </mobi.jzcx.android.core.percent.PercentLinearLayout>

        <mobi.jzcx.android.core.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_marginBottomPercent="3.33%w"
            app:layout_marginLeftPercent="3.33%w"
            app:layout_marginRightPercent="3.33%w"
            app:layout_marginTopPercent="5.83%w"
            android:background="@drawable/stepsum_bg" >

            <mobi.jzcx.android.core.percent.PercentRelativeLayout
                android:id="@+id/hasUpdateRL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/petstepsnum_weekTrendTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_marginLeftPercent="3.34%w"
                    app:layout_marginTopPercent="5.02%w"
                    android:background="@drawable/stepsum_weektrendbg"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:text="@string/petstepsnum_weektrend"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <mobi.jzcx.android.core.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_marginTopPercent="18.88%w" >

                    <ImageView
                        android:id="@+id/petstepsnum_dayChar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        app:layout_heightPercent="34.72%w"
                        app:layout_widthPercent="34.72%w"
                        android:src="@drawable/petstepsnum_dayimg" />

                    <mobi.jzcx.android.core.percent.PercentLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/petstepsnum_steps"
                            android:textColor="#333333"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/petstepsnum_setps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#333333"
                            android:textSize="22sp" />
                    </mobi.jzcx.android.core.percent.PercentLinearLayout>

                    <ImageView
                        android:id="@+id/petstepsnum_previous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:layout_marginLeftPercent="3.34%w"
                        android:src="@drawable/calendar_previous" />

                    <ImageView
                        android:id="@+id/petstepsnum_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:layout_marginRightPercent="3.34%w"
                        android:src="@drawable/calendar_next" />
                </mobi.jzcx.android.core.percent.PercentRelativeLayout>

                <mobi.jzcx.android.core.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_marginTopPercent="49.88%w" >

                    <ImageView
                        android:id="@+id/petstepsnum_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:layout_marginLeftPercent="3.34%w"
                        android:src="@drawable/petstepsnum_shareimg" />

                    <ImageView
                        android:id="@+id/petstepsnum_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:layout_marginRightPercent="3.34%w"
                        android:src="@drawable/petstepsnum_update" />
                </mobi.jzcx.android.core.percent.PercentRelativeLayout>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/petstepsnum_stepsLineChart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    app:layout_heightPercent="50%w" >
                </com.github.mikephil.charting.charts.LineChart>
            </mobi.jzcx.android.core.percent.PercentRelativeLayout>

            <mobi.jzcx.android.core.percent.PercentRelativeLayout
                android:id="@+id/notUpdateRL"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:layout_marginTopPercent="24%w"
                    android:background="@drawable/petstepsnum_notupdateimg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:layout_marginTopPercent="64%w"
                    android:text="@string/petstepsnum_notupdatetext"
                    android:textColor="#d1d7d9"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/petstepsnum_notupdateImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:layout_marginTopPercent="89%w"
                    android:background="@drawable/petstepsnum_notupdate" />
            </mobi.jzcx.android.core.percent.PercentRelativeLayout>
        </mobi.jzcx.android.core.percent.PercentRelativeLayout>
    </mobi.jzcx.android.core.percent.PercentLinearLayout>

</mobi.jzcx.android.core.percent.PercentLinearLayout>