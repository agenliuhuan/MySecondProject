<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/scrollbarpanelbg" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8px" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/scrollbarpanel_timebg" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/scrollbarpanel_timebg2" />

            <ImageView
                android:id="@+id/scrollbarpanel_hourimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/scrollbarpanel_hour" />

            <ImageView
                android:id="@+id/scrollbarpanel_mitimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/scrollbarpanel_mit" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/scrollbarpanel_center" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8px"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/scrollbarpanel_timetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:57"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/scrollbarpanel_datetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7æœˆ26"
                android:textColor="#999999"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>