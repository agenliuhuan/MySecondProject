<?xml version="1.0" encoding="utf-8"?>
<mobi.jzcx.android.core.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <mobi.jzcx.android.core.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="17.78%w" >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/attention_avatar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:layout_heightPercent="11.39%w"
            app:layout_marginLeftPercent="3.33%w"
            app:layout_widthPercent="11.39%w"
            fresco:placeholderImage="@drawable/avatar_default_image" />

        <mobi.jzcx.android.core.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/attention_avatar"
            app:layout_marginLeftPercent="2.5%w"
            app:layout_marginRightPercent="3.33%w" >

            <mobi.jzcx.android.core.percent.PercentLinearLayout
                android:id="@+id/attention_contentLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <mobi.jzcx.android.core.percent.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/attention_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#444444"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/attention_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_marginLeftPercent="0.8%w"
                        android:src="@drawable/sex_lady" />
                </mobi.jzcx.android.core.percent.PercentLinearLayout>

                <mobi.jzcx.android.core.percent.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_marginTopPercent="1.08%w"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/distance" />

                    <TextView
                        android:id="@+id/attention_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_marginLeftPercent="1.39%w"
                        android:textColor="#aaaaaa"
                        android:textSize="12sp" />
                </mobi.jzcx.android.core.percent.PercentLinearLayout>
            </mobi.jzcx.android.core.percent.PercentLinearLayout>
        </mobi.jzcx.android.core.percent.PercentRelativeLayout>

        <mobi.jzcx.android.chongmi.view.HorizontalListView
            android:id="@+id/attention_pet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:cacheColorHint="@color/transparent"
            android:listSelector="@color/transparent"
            android:scrollbars="none" 
            app:layout_marginLeftPercent="70%w"
            app:layout_marginRightPercent="3.33%w"/>
    </mobi.jzcx.android.core.percent.PercentRelativeLayout>

</mobi.jzcx.android.core.percent.PercentRelativeLayout>