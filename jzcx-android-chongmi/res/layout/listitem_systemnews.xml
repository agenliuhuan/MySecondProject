<?xml version="1.0" encoding="utf-8"?>
<mobi.jzcx.android.core.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <mobi.jzcx.android.core.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="18%w"
        android:background="#ffffff"
        android:orientation="vertical" >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/systemnews_Item_userimg"
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_centerVertical="true"
            app:layout_heightPercent="13.33%w"
            app:layout_marginLeftPercent="3.33%w"
            app:layout_widthPercent="13.33%w"
            fresco:placeholderImage="@drawable/news_system_img" />

        <mobi.jzcx.android.core.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/systemnews_Item_userimg"
            app:layout_marginLeftPercent="3.33%w"
            app:layout_marginRightPercent="3.33%w"
            android:orientation="vertical" >

            <mobi.jzcx.android.core.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/systemnews_Item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:layout_marginRightPercent="20%w"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="name"
                    android:textColor="#444444"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/systemnews_Item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="time"
                    android:textColor="#999999"
                    android:textSize="10sp" />
            </mobi.jzcx.android.core.percent.PercentRelativeLayout>

            <TextView
                android:id="@+id/systemnews_Item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="content"
                android:textColor="#999999"
                android:textSize="12sp" />
        </mobi.jzcx.android.core.percent.PercentLinearLayout>
    </mobi.jzcx.android.core.percent.PercentRelativeLayout>

</mobi.jzcx.android.core.percent.PercentRelativeLayout>