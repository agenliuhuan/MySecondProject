<?xml version="1.0" encoding="utf-8"?>
<mobi.jzcx.android.core.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <mobi.jzcx.android.core.percent.PercentRelativeLayout
        android:id="@+id/scanbluetooth_topRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33363d" >

        <mobi.jzcx.android.core.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            app:layout_heightPercent="13%w" >

            <mobi.jzcx.android.core.percent.PercentRelativeLayout
                android:id="@+id/scanbluetooth_title_leftRL"
                android:layout_width="0px"
                android:layout_height="0px"
                app:layout_heightPercent="13%w"
                app:layout_widthPercent="13%w" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_titlebar_left_normal" />
            </mobi.jzcx.android.core.percent.PercentRelativeLayout>

            <TextView
                android:id="@+id/scanbluetooth_title_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/hardware_scanbluetooth_title"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </mobi.jzcx.android.core.percent.PercentRelativeLayout>

        <mobi.jzcx.android.core.percent.PercentRelativeLayout
            android:id="@+id/scanbluetooth_centerRL"
            android:layout_centerInParent="true"
            app:layout_heightPercent="80%w"
            app:layout_widthPercent="80%w" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:layout_heightPercent="80%w"
                app:layout_widthPercent="80%w" />

            <ImageView
                android:id="@+id/scanbluetooth_rotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:layout_heightPercent="80%w"
                app:layout_widthPercent="80%w"
                android:background="@drawable/hardware_scanimg" />

            <ImageView
                android:id="@+id/scanbluetooth_petimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:layout_heightPercent="20%w"
                app:layout_widthPercent="20%w" />
        </mobi.jzcx.android.core.percent.PercentRelativeLayout>

        <TextView
            android:id="@+id/scanbluetooth_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scanbluetooth_centerRL"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="3%w"
            android:gravity="center"
            android:text="@string/hardware_scanbluetooth_text"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </mobi.jzcx.android.core.percent.PercentRelativeLayout>

    <ListView
        android:id="@+id/scanbluetooth_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanbluetooth_topRL"
        android:background="#f4f4f4"
        android:cacheColorHint="@color/transparent"
        android:divider="#d8d8d8"
        android:dividerHeight="1px"
        android:listSelector="@drawable/on_item_selected"
        android:scrollbars="none" >
    </ListView>

</mobi.jzcx.android.core.percent.PercentRelativeLayout>