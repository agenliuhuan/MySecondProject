<?xml version="1.0" encoding="utf-8"?>
<mobi.jzcx.android.core.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <mobi.jzcx.android.core.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <mobi.jzcx.android.core.percent.PercentLinearLayout
            android:id="@+id/petcenteritem_timeLL"
            android:layout_width="0px"
            android:layout_height="match_parent"
            app:layout_widthPercent="16.66%w"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/petcenteritem_dayTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:layout_marginTopPercent="33.3%w"
                android:text=""
                android:textColor="#444444"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/petcenteritem_monthTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:layout_marginTopPercent="25%w"
                android:text=""
                android:textColor="#444444"
                android:textSize="12sp"
                android:textStyle="bold" />
        </mobi.jzcx.android.core.percent.PercentLinearLayout>
    </mobi.jzcx.android.core.percent.PercentLinearLayout>

    <View
        android:layout_width="4px"
        android:layout_height="match_parent"
        app:layout_marginLeftPercent="17%w"
        android:background="#d8d8d8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="16.2%w"
        app:layout_marginTopPercent="13%w"
        android:src="@drawable/petcenteritem_timepoint" />

    <mobi.jzcx.android.core.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <mobi.jzcx.android.core.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="21.33%w"
            app:layout_marginTopPercent="11%w"
            app:layout_widthPercent="71.94%w"
            android:background="@drawable/petcenteritem_contentbg"
            android:orientation="vertical" >

            <mobi.jzcx.android.core.percent.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/petcenteritem_contentimg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="48%w"
                    app:layout_widthPercent="48%w" />

                <ImageView
                    android:id="@+id/petcenteritem_contentimg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="48%w"
                    app:layout_marginLeftPercent="2.5%w"
                    app:layout_widthPercent="48%w" />
            </mobi.jzcx.android.core.percent.PercentLinearLayout>

            <TextView
                android:id="@+id/petcenteritem_contenttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent="4.17%w"
                app:layout_widthPercent="88%w"
                android:text="sd"
                android:textColor="#444444"
                android:textSize="14sp" />

            <mobi.jzcx.android.core.percent.PercentRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent="4.17%w"
                app:layout_widthPercent="88%w" >

                <LinearLayout
                    android:id="@+id/petcenteritem_commentRL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    app:layout_widthPercent="25%w"
                    android:background="@drawable/comment_share_default"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5px" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/comment_default" />

                    <TextView
                        android:id="@+id/petcenteritem_commentNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:text="@string/dynamic_comment"
                        android:textColor="#8c8c8c"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/petcenteritem_zanLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/petcenteritem_commentRL"
                    app:layout_marginRightPercent="4.17%w"
                    app:layout_widthPercent="25%w"
                    android:background="@drawable/comment_share_default"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5px" >

                    <ImageView
                        android:id="@+id/petcenteritem_zanimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_notzan" />

                    <TextView
                        android:id="@+id/petcenteritem_zantext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:text="@string/dynamic_zan"
                        android:textColor="#8c8c8c"
                        android:textSize="12sp" />
                </LinearLayout>
            </mobi.jzcx.android.core.percent.PercentRelativeLayout>
        </mobi.jzcx.android.core.percent.PercentLinearLayout>
    </mobi.jzcx.android.core.percent.PercentRelativeLayout>

</mobi.jzcx.android.core.percent.PercentFrameLayout>