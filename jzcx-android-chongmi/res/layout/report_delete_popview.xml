<?xml version="1.0" encoding="utf-8"?>
<mobi.jzcx.android.core.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@color/comm_black_transparent_background"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical" >

    <mobi.jzcx.android.core.percent.PercentLinearLayout
        android:id="@+id/reportOrDeleteLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/reportOrDeleteBtn"
            android:layout_width="match_parent"
            android:layout_height="0px"
            app:layout_heightPercent="12.2%w"
            app:layout_marginBottomPercent="3.3%w"
            app:layout_marginLeftPercent="3.3%w"
            app:layout_marginRightPercent="3.3%w"
            android:background="@drawable/imagepicker_btnbg"
            android:gravity="center"
            android:text="@string/registeover_image_btn_cancel"
            android:textColor="@drawable/imagepicker_text_color_selector"
            android:textSize="15sp" />

        <Button
            android:id="@+id/reportOrDeleteBtn_cancel"
            android:layout_width="match_parent"
            android:layout_height="0px"
            app:layout_heightPercent="12.2%w"
            app:layout_marginBottomPercent="3.3%w"
            app:layout_marginLeftPercent="3.3%w"
            app:layout_marginRightPercent="3.3%w"
            android:background="@drawable/imagepicker_btnbg"
            android:gravity="center"
            android:text="@string/registeover_image_btn_cancel"
            android:textColor="@drawable/imagepicker_text_color_selector"
            android:textSize="15sp" />
    </mobi.jzcx.android.core.percent.PercentLinearLayout>

</mobi.jzcx.android.core.percent.PercentRelativeLayout>