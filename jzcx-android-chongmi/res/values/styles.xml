<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar">

        <!-- <item name="android:windowAnimationStyle">@style/Animation.Activity.Style</item> -->
        <item name="android:windowAnimationStyle">@style/AnimationActivity.Translucent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="unified_loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 通用listview样式 -->
    <style name="mylistViewStyle">
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="Theme.Light.FullScreenDialogAct" parent="@style/ECBaseDialog">
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="ECBaseDialog" parent="@android:style/Theme.Dialog" />

    <style name="ShadowedText">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="ShadowedText.Light" parent="@style/ShadowedText">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#ff555555</item>
    </style>

    <style name="DialogTitle" parent="@style/ShadowedText">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Style_Scrollable">
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    <style name="DialogButton">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:minHeight">45.0dip</item>
    </style>

    <style name="DialogButton.Left" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_left</item>
    </style>

    <style name="DialogButton.Right" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_right</item>
    </style>

    <style name="DialogButton.Center" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_center</item>
    </style>

    <!-- 自定义弹出框样式 -->
    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppSplash" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ShareFriend" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimationActivity.share</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="NoAnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen"></style>

    <style name="ThemeActivity" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/MyAnimationActivity</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="MyAnimationActivity" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/translate_between_interface_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/translate_between_interface_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/translate_between_interface_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_between_interface_right_out</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/translate_between_interface_left_in</item>
        <item name="android:windowExitAnimation">@anim/translate_between_interface_right_out</item>
    </style>

    <style name="AnimationActivity.Translucent" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/translate_between_interface_right_in</item>
        <item name="android:windowExitAnimation">@anim/translate_between_interface_left_out</item>
    </style>

    <style name="AnimationActivity.Translucent.Scale" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/activity_scale_in</item>
        <item name="android:windowExitAnimation">@anim/activity_scale_out</item>
    </style>

    <style name="AnimationActivity.share" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/share_activity_open</item>
        <item name="android:windowExitAnimation">@anim/share_activity_out</item>
    </style>

    <declare-styleable name="PageIndicator">
        <attr name="indicator_spacing" format="dimension" />
        <attr name="indicator_type" format="enum">
            <enum name="circle" value="0" />
            <enum name="fraction" value="1" />
        </attr>
    </declare-styleable>

    <style name="CCPFooter">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">49.0dip</item>
    </style>

    <style name="CCPEditText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/dynamic_edittext</item>
    </style>

    <style name="ChattingUISenderText">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">#ffaaaaaa</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">7.0dip</item>
        <item name="android:paddingRight">7.0dip</item>
        <item name="android:paddingBottom">1.5dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0.0dip</item>
        <item name="android:maxWidth">240.0dip</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ChattingUIText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">240.0dip</item>
        <item name="android:minHeight">15.0dip</item>
        <item name="android:lineSpacingExtra">2.0dip</item>
    </style>

    <style name="ChattingUISplit">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">#ff888888</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">11.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/NormalPadding</item>
        <item name="android:layout_marginBottom">@dimen/SmallPadding</item>
    </style>

    <style name="ChattingUIContent">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:paddingBottom">12.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChattingUIAvatarMaskTo">
        <item name="android:layout_width">42.0dip</item>
        <item name="android:layout_height">42.0dip</item>
        <item name="android:layout_marginLeft">1.0dip</item>
    </style>

    <style name="ChattingUIAvatarTo">
        <item name="android:src">@drawable/avatar_default_image</item>
        <item name="android:layout_width">42.0dip</item>
        <item name="android:layout_height">42.0dip</item>
        <item name="android:layout_marginLeft">3.0dip</item>
    </style>

    <style name="ChattingUIVoiceLength">
        <item name="android:textSize">@dimen/HintTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#888888</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/SmallPadding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChattingUIWordCount">
        <item name="android:textSize">13.0dip</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="smallCustomProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/progress_small_holo</item>
        <item name="android:paddingLeft">6.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
    </style>

    <style name="ChattingUIState">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/SmallPadding</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="mediumCustomProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_medium_holo</item>
    </style>

    <style name="NavPage">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/comm_activity_background_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="CCPListItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/comm_list_item_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">98px</item>
        <item name="android:minHeight">98px</item>
    </style>

    <style name="CCPGroupListItem" parent="@style/CCPListItem">
        <item name="android:paddingLeft">@dimen/SmallPadding</item>
        <item name="android:paddingRight">@dimen/SmallPadding</item>
    </style>

    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.Header" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.Date" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mcv_text_date_light</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.WeekDay" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12sp</item>
    </style>

</resources>